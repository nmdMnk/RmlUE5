	font-family: LatoLatin;
	font-size: 15dp;
	font-weight: bold;
	color: #86a9b8ff;
	text-align: left;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	z-index: 20;
}

div.equip-slot
{
	display: block;
	box-sizing: border-box;
	width: 152dp;
	height: 152dp;
	padding-bottom: 0;
