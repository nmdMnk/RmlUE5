	top: 24dp;
	margin: 0;
	background-color: transparent;
	border-top: 3dp #9aa4b2ff;
	border-right: 3dp #9aa4b2ff;
	border-bottom: 3dp #9aa4b2ff;
	border-left: 3dp #9aa4b2ff;
}

div.equip-subslot
{
	position: absolute;
	box-sizing: border-box;
	left: 0dp;
	bottom: 0dp;
	width: 67dp;
	height: 67dp;
	padding-bottom: 0;
	background-color: transparent;
	border-top: 3dp #9aa4b2ff;
	border-right: 3dp #9aa4b2ff;
	border-bottom: 3dp #9aa4b2ff;
	border-left: 3dp #9aa4b2ff;
