div.equip-slot.slot-main      { left: 71dp; }
div.equip-slot.slot-secondary { left: 71dp; }
div.equip-slot.slot-range     { left: 71dp; }

div.equip-slot.selected-yellow
{
	border-top-color: #ffbf31ff;
	border-right-color: #ffbf31ff;
	border-bottom-color: #ffbf31ff;
	border-left-color: #ffbf31ff;
}

div.equip-slot:hover
{
	border-top-color: #ff4444ff;
	border-right-color: #ff4444ff;
	border-bottom-color: #ff4444ff;
	border-left-color: #ff4444ff;
}

div.equip-slot-sm
{
	display: block;
	box-sizing: border-box;
	width: 160dp;
	height: 160dp;
	margin: 0;
	position: absolute;
	overflow: hidden;
}

div.equip-armor div.equip-slot-sm:nth-child(1)
{
	left: 0dp;
	top: 0dp;
}

div.equip-armor div.equip-slot-sm:nth-child(2)
{
	left: 88dp;
	top: 155dp;
}

div.equip-armor div.equip-slot-sm:nth-child(3)
{
	left: 0dp;
	top: 310dp;
}

div.equip-armor div.equip-slot-sm:nth-child(4)
{
	left: 88dp;
	top: 465dp;
}

div.equip-armor div.equip-slot-sm:nth-child(5)
{
	left: 0dp;
	top: 620dp;
}

div.equip-slot-sm div.hex-outline,
div.equip-slot-sm div.hex-fill
{
	position: absolute;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
}

/* Fill / base shape (back layer) */
div.equip-slot-sm div.hex-outline
{
	decorator: image(/Game/Texture/Inventory/T_Talisman_Empty.T_Talisman_Empty contain);
}

/* Border ring (front layer — only visible when equipped) */
div.equip-slot-sm div.hex-fill
{
	display: none;
	decorator: image(/Game/Texture/Inventory/T_Talisman_Border.T_Talisman_Border contain);
}

div.equip-slot-sm.equipped div.hex-fill
{
	display: block;
	image-color: #57e8ffff;
}

div.equip-slot-sm.selected-yellow div.hex-fill
{
	image-color: #ffbf31ff;
}

div.equip-slot-sm:hover div.hex-fill
{
	image-color: #ff4444ff;
}

/* ---- context overrides: div.item inside equip slots ---- */

/* Weapon equip slots: neutralize item chrome (border, bg) */
div.equip-slot > div.item
{
	border: 0;
	background-color: transparent;
	z-index: auto;
}

/* Hexagon equip slots: neutralize item chrome, clip to hex */
div.equip-slot-sm > div.item
{
	border: 0;
	background-color: transparent;
	padding: 0;
	z-index: auto;
	overflow: hidden;
}

/* Reposition icon inside hexagon (centered, absolute) */
div.equip-slot-sm > div.item > div.item-icon
{
	position: absolute;
	top: 22%;
	left: 22%;
	width: 56%;
	height: 56%;
	margin: 0;
}

/* Hide label/qty inside hexagons (too small for text) */
div.equip-slot-sm > div.item > span.item-label,
div.equip-slot-sm > div.item > span.item-qty
{
	display: none;
}

span.equip-name
{
	display: block;
	font-family: LatoLatin;
	font-size: 10dp;
	text-align: center;
	color: #a09882ff;
	margin-top: 2%;
}

span.equip-empty
{
	display: block;
